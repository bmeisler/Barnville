package com.evili.utils{	import flash.utils.ByteArray;	/** creates a perfect clone of any shallow (1 level deep) array */	public class ArrayCloner {		protected static var _instance:ArrayCloner;		public static function get instance():ArrayCloner {			if (_instance==null) {				_instance = new ArrayCloner();			}			return _instance;		}				public static function clone(source:Object):*		{			var myBA:ByteArray = new ByteArray();			myBA.writeObject(source);			myBA.position = 0;			return(myBA.readObject());		}	}}