package com.evili.utils{	/** when not in timeline, must now manually import library items*/	import flash.events.MouseEvent;	import flash.events.Event;	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.utils.Timer;	import flash.events.TimerEvent;		/* in order to add other Display objects to a class, it must inherit from a DisplayObject 	   don't do this for every class! Use composition instead! BUT for initial class, it MUST	   inherit from either MovieClip or Sprite*/	public class BallFollowMouseClass extends MovieClip {		/*  scope more easily managed than timeline - these are class properties*/		var ball:Sprite = new Sprite();		var div:Number=.2;		var ax:Number=0;		var ay:Number=0;		/* use Timer class now - setInterval deprecated* - worked in Timeline script!*/		var myTimer:Timer;				public function BallFollowMouseClass() {			init();		}		/* better encapsulation*/		private function init():void {			ball.graphics.beginFill(0x333333, 1);			ball.graphics.drawCircle(0, 0, 30);			ball.graphics.endFill();			addChild(ball);			//can optionally name an instance			ball.name="myBall";			//this.setInterval(loop, 1000/30);			myTimer = new Timer(1000/30);			myTimer.addEventListener(TimerEvent.TIMER, loop);			myTimer.start();			ball.addEventListener(MouseEvent.CLICK, doClick);		}		private function loop(e:TimerEvent) {			ball.x -= ax = (ax + (ball.x - mouseX) *div) *.9;			ball.y -= ay = (ay + (ball.y -mouseY) *div) * .9;		}		private function doClick(e:Event):void {			trace("you clicked on " + e.target.name);		}	}}